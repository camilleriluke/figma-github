{
	"private": true,
	"scripts": {
		"test": "cross-env BABEL_ENV=testing ava",
		"webpack": "cross-env node -r babel-register node_modules/.bin/webpack",
		"watch": "npm run webpack -- --mode=development --watch",
		"build": "npm run webpack -- --mode=production && npm run zip",
		"zip": "bestzip distribution.zip distribution/*"
	},
	"dependencies": {
		"dom-chef": "^3.1.0",
		"dom-loaded": "^1.0.1",
		"element-ready": "^2.2.1",
		"jsdom": "^11.10.0",
		"query-string": "^6.1.0",
		"select-dom": "^4.1.1"
	},
	"devDependencies": {
		"ava": "*",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-plugin-transform-react-jsx": "^6.24.1",
		"babel-register": "^6.26.0",
		"bestzip": "^2.1.2",
		"copy-webpack-plugin": "^4.5.1",
		"cross-env": "^5.1.4",
		"prettier": "^1.12.1",
		"stylelint": "^9.2.0",
		"stylelint-config-xo": "^0.8.0",
		"uglifyjs-webpack-plugin": "^1.2.5",
		"webextension-polyfill": "^0.2.1",
		"webpack": "^4.7.0",
		"webpack-cli": "^2.1.2",
		"xo": "*"
	},
	"xo": {
		"rules": {
			"no-unused-vars": [
				2,
				{
					"varsIgnorePattern": "^h$"
				}
			],
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"envs": [
			"browser"
		],
		"globals": [
			"browser"
		]
	},
	"ava": {
		"files": [
			"test/*.js"
		],
		"require": [
			"babel-register"
		]
	},
	"babel": {
		"plugins": [
			[
				"transform-react-jsx",
				{
					"pragma": "h",
					"useBuiltIns": true
				}
			],
			"transform-es2015-modules-commonjs"
		],
		"env": {
			"development": {
				"plugins": []
			},
			"testing": {
				"plugins": []
			}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {}
	}
}
